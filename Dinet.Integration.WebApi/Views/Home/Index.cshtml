@using Dinet.Integration.WebApi.Resources;

@{
    /**/

    ViewBag.Title = "Inicio";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="bg-image" style="background-image: url('@Url.Content("~/Images/dinet_simple.gif")');">
    <div class="row mx-0 bg-black-op">
        <div class="hero-static col-md-6 col-xl-8 d-none d-md-flex align-items-md-end">
            <div class="p-30 invisible" data-toggle="appear">
                <p class="font-size-h3 font-w600 font-italic text-white">
                    @Html.Raw(LayoutResource.MottoLabel)
                </p>
                <p class="font-italic text-white-op">
                    Copyright &copy; Dinet Web Application
                </p>
            </div>
        </div>
        <div class="hero-static col-md-6 col-xl-4 d-flex align-items-center bg-white invisible" data-toggle="appear" data-class="animated fadeInRight">
            <div class="content content-full">
                <!-- Header -->
                <div class="py-15 text-center">
                    <a href="#">
                        <img class="img-link" src="@Url.Content("~/Images/logoDinet.png")" style="max-height: 100px" />
                    </a>
                    <br />
                    <br />
                    <br />
                    <br />
                    <h4 class="display-6 font-w700">Dinet.Integration.WebApi</h4>
